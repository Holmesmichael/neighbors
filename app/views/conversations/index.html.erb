<h1>Inbox</h1>
<ul>
 

  <% @conversations.each do |conversation| %>
    <% if conversation.sender_id == current_user.id ||  conversation.recipient_id == current_user.id %>
     <% if conversation.sender_id == current_user.id %>
       <% recipient = Request.find(conversation.recipient_id) %>
     <% else %>
       <% recipient = Request.find(conversation.sender_id) %>
     <% end %>
     <div class="converstaions">
       <%= link_to recipient.user.first_name,   conversation_messages_path(conversation)%>
     </div>
 
    <% end %>
   <% end %>


</ul>


