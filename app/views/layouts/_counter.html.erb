<div class="request_counter"style="justify-content:center;">
    <div class="container">
        <h6>Open</h6>
        <h4>
            <%= Request.where("request_conversation < 5").count do |count| %>
            <% end %>
        </h4>

        <h6>Completed</h6>
        <h4>
            <%= Request.where("request_conversation >= 5").count do |count| %>
            <% end %>
        </h4>
    </div>
</div>


<script>setTimeout("location.reload();",10000);</script>