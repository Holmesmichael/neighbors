<div class="container">

<div class="card border-primary mb-3" style="max-width: 18rem; margin-top:100px;">
  <div class="card-header">Convo</div>
  <div class="card-body text-primary">
    <p class="card-text"><ul>
    <% @messages.each do |message| %>
      <% if message.body %>
        <li>
          <h4><%= message.user.first_name %></h4>
          <p><%= message.body %></p>
  
        </li>
      <% end %>
    <% end %>
    
  </ul></p>
  </div>
</div>



<ul>
  
</ul>

<%= form_for [@conversation, @message] do |f| %>
  <div class="field">
    <%= f.text_area :body, placeholder: "Your message" %>
  </div>

  <%= f.submit "Send" %>
<% end %>

</div>