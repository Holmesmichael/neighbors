<div class="signingup">
  <div class="container">
      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="control-group">


        <div class="container">
          <div class="field">
            <%= f.label :First_Name %><br />
            <%= f.text_field :first_name, id: :first_name %>
          </div>
        <div class="field">
          <%= f.label :Last_Name %><br />
          <%= f.text_field :last_name, id: :last_name %>
        </div>
        <div class="field">
          <%= f.label :Email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
          
              
            
              <%= f.label :ID %><br>
              <%= f.file_field :image %>
              <%= f.hidden_field :image_cache %>
          </div>
          <br />
    
          <div class="field">
          <%= f.label :Password %><br />
          <%= f.password_field required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %><br />
          <%= f.label :password_confirmation, :label => 'Confirm Password' %><br />
        </div><br/>

        <div class="form-actions">
          <%= f.button :submit, "Sign up" %>
        </div>
      <% end %>
        
          </div>

          
      <%= render "devise/shared/links" %>
  </div>
</div>