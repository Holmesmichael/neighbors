  <div class="row">
    <div class="col-sm">
      One of three columns
    </div>
    <div class="col-sm">
    <table>
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @requests.each do |request| %>
        <% if request.user == current_user %>
            <tr>
              <td><%= request.title %></td>
                <td>
                    <div class="btn-group btn-group-sm">
                  
           
                          <%= link_to 'View', request, class: "btn btn-success" %>
                  
                              
              </td>
            </tr>
        <% end %>
      <% end %>
   
    </tbody>
  </table>
    </div>
    <div class="col-sm">
      One of three columns
    </div>
  </div>
</div>